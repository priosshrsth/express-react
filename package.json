{
  "name": "express-react-typescript",
  "version": "1.0.0",
  "description": "An Express, React with Typescript and Less boilerplate",
  "main": "server/index.js",
  "scripts": {
    "start": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --project server/tsconfig.json --respawn --transpile-only --watch server -- server/server.ts",
    "dev:client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "build": "webpack --mode production",
    "serve": "npm run build && npm run prod:server",
    "prod:server": "tsc -p server/tsconfig.json && node dist/server/server",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prettier:fix": "prettier {**/*,*}.{js,ts,jsx,tsx} --write --ignore-unknown"
  },
  "author": "Prios Shrestha",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "express": "^4.16.3",
    "glob": "^7.1.6",
    "mongoose": "^5.10.13",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.12.5",
    "@tsconfig/node14": "^1.0.0",
    "@types/copy-webpack-plugin": "^6.2.0",
    "@types/express": "^4.17.8",
    "@types/mini-css-extract-plugin": "^1.2.1",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.8.4",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.3.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.7.0",
    "fibers": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.0.5",
    "source-map-loader": "^1.1.2",
    "style-loader": "^2.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.5.1"
  }
}
